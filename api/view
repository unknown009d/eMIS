1. CREATE VIEW project_all AS SELECT ir.sr_no, ir.c_code, cp.p_id, cp.nom_id, nm.nom, nm.url, ir.fyear, ir.mpr, ir.bill_no, cp.p_date, cp.priority,cp.wim_name, cp.wim_desg, cp.wim_email, cp.wim_phone, cp.v_name, cp.v_address, cp.v_email, cp.v_phone, cp.v_task_assign, cl.c_name, cl.c_addr, cl.c_phn, cl.c_email, cl.c_gst, ct.ct_desc FROM tbl_it_register ir JOIN tbl_client cl ON ir.c_code = cl.c_code JOIN tbl_ctype ct ON cl.c_cat = ct.ct_code JOIN tbl_project_profile cp ON ir.sr_no = cp.sr_no JOIN tbl_nom nm ON cp.nom_id = nm.id;

2. CREATE VIEW project_all AS SELECT ir.sr_no, ir.c_code, cp.p_id, cp.nom_id, nm.nom, nm.url, ir.fyear, ir.mpr, ir.bill_no, cp.p_date, cp.priority,cp.wim_name, cp.wim_desg, cp.wim_email, cp.wim_phone, cp.v_name, cp.v_address, cp.v_email, cp.v_phone, cp.v_task_assign, cp.v_gst, cl.c_name, cl.c_addr, cl.c_phn, cl.c_email, cl.c_gst, ct.ct_desc FROM tbl_it_register ir JOIN tbl_client cl ON ir.c_code = cl.c_code JOIN tbl_ctype ct ON cl.c_cat = ct.ct_code JOIN tbl_project_profile cp ON ir.sr_no = cp.sr_no JOIN tbl_nom nm ON cp.nom_id = nm.id; 